# MetaTrader 5 Credentials
# Replace with your actual MT5 account details
MT5_LOGIN=your_account_number
MT5_PASSWORD=your_password
MT5_SERVER=your_server_name

# Database Configuration (Optional - for PostgreSQL/MySQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Telegram Bot Configuration (Optional)
# Create a bot via @BotFather on Telegram to get these
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Email Alert Configuration (Optional)
# For Gmail, use app-specific password
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587

# API Keys (Optional - for external data sources)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
QUANDL_API_KEY=your_quandl_key
FRED_API_KEY=your_fred_key

# Security Settings
SECRET_KEY=your_secret_key_for_encryption
JWT_SECRET=your_jwt_secret_for_auth

# Development Settings
DEBUG_MODE=false
LOG_LEVEL=INFO
PAPER_TRADING=false
